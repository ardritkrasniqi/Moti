<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
        <variable
            name="cityNameList"
            type="String" />
        <variable
            name="temperature"
            type="String" />
        <variable
            name="description"
            type="String" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rainy_gif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                cityNameItem="@{cityNameList}"
                android:layout_margin="10dp"
                android:id="@+id/city_name"
                android:textColor="#fff"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="22sp"
                tools:text="Prizren"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="19sp"
                cityTemp="@{temperature}"
                android:id="@+id/current_temp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintStart_toStartOf="@+id/city_name"
                app:layout_constraintTop_toBottomOf="@id/city_name"
                tools:text="22Â°" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sunny"
                app:layout_constraintStart_toEndOf="@id/current_temp"
                android:textSize="19sp"
                cityWeatherDescription="@{description}"
                android:id="@+id/weather_description"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/whiteColor"
                app:layout_constraintBottom_toBottomOf="@id/current_temp"
                android:layout_marginStart="5dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>