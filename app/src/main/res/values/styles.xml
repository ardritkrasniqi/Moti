<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/whiteColor</item>
    </style>


    <style name="tempCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
    </style>


    <style name="cardTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#fff</item>
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="AdditionalInfoFieldsText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="AdditionalInfoValuesText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#D9000000</item>
    </style>


    <style name="ThreeHoursForecast" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThreeHoursForecastTemp" parent="ThreeHoursForecast">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

</resources>
